<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Start camera acquisition"
            id="uk.ac.gda.client.live.stream.controls.startcommand"
            name="Start">
      </command>
      <command
            description="Stop camera acquisition"
            id="uk.ac.gda.client.live.stream.controls.stopcommand"
            name="Stop">
      </command>
      <command
            description="Enable/disable image update"
            id="uk.ac.gda.client.live.stream.controls.freezecommand"
            name="Freeze">
      </command>
      <command
            description="Crosshair"
            id="uk.ac.gda.client.live.stream.controls.crosshair"
            name="Crosshair">
         <commandParameter
               id="uk.ac.gda.client.live.stream.controls.crosshairParameter"
               name="CrosshairParameter"
               optional="false">
            <values
                  class="org.eclipse.ui.commands.ExtensionParameterValues">
               <parameter
                     name="uk.ac.gda.client.live.stream.controls.crosshair.add"
                     value="Add">
               </parameter>
               <parameter
                     name="uk.ac.gda.client.live.stream.controls.crosshair.remove"
                     value="Remove">
               </parameter>
               <parameter
                     name="uk.ac.gda.client.live.stream.controls.crosshair.save"
                     value="Save">
               </parameter>
               <parameter
                     name="uk.ac.gda.client.live.stream.controls.crosshair.visible"
                     value="Visible">
               </parameter>
               <parameter
                     name="uk.ac.gda.client.live.stream.controls.crosshair.movable"
                     value="Moveable">
               </parameter>
            </values>
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="uk.ac.gda.client.live.stream.controls.camera.state.EpicsCameraState">
         <variable
               name="uk.ac.gda.live.stream.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="uk.ac.gda.client.live.stream.controls.handlers.EpicsCameraStartHandler"
            commandId="uk.ac.gda.client.live.stream.controls.startcommand">
      </handler>
      <handler
            class="uk.ac.gda.client.live.stream.controls.handlers.EpicsCameraStopHandler"
            commandId="uk.ac.gda.client.live.stream.controls.stopcommand">
      </handler>
      <handler
            class="uk.ac.gda.client.live.stream.controls.handlers.EpicsFreezeLiveStreamDiaplayUpdateHandler"
            commandId="uk.ac.gda.client.live.stream.controls.freezecommand">
      </handler>
      <handler
            class="uk.ac.gda.client.live.stream.controls.handlers.CrossHairHandler"
            commandId="uk.ac.gda.client.live.stream.controls.crosshair">
      </handler>
   </extension>

</plugin>
