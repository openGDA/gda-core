#ifndef _PEEM_IDL_
#define _PEEM_IDL_

#include <device.idl>

module gda {
module device {
module peem {
module corba {

/**
 *  An interface for a distributed PEEM class
 */
interface CorbaPEEM : device::corba::CorbaDevice
{
	/* PEEM */	
	boolean connect()  raises (device::corba::CorbaDeviceException);

	boolean disconnect()  raises (device::corba::CorbaDeviceException);

	/* LEEM 2000 */
	string modules() raises (device::corba::CorbaDeviceException);

	long getModuleNumber() raises (device::corba::CorbaDeviceException);

	long getModuleIndex(in string moduleName) raises (device::corba::CorbaDeviceException);

	string getPSName(in long index) raises (device::corba::CorbaDeviceException);

	float getPSValue(in long index) raises (device::corba::CorbaDeviceException);

	boolean setPSValue(in long index, in float value) raises (device::corba::CorbaDeviceException);

	string getPreset() raises (device::corba::CorbaDeviceException);

	long setPhi(in float angle) raises (device::corba::CorbaDeviceException);

	void getMicrometerValue(out float xcoord, out float ycoord) raises (device::corba::CorbaDeviceException);

	float getVacuumGaugeValue() raises (device::corba::CorbaDeviceException);

	string getVacuumGaugeLabel() raises (device::corba::CorbaDeviceException);

	boolean isInitDone() raises (device::corba::CorbaDeviceException);

};

};};};};

#endif
