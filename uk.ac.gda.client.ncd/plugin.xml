   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.gda.client.scripting.JythonPerspective">
          <view
                id="gda.rcp.ncd.views.NCDStatus"
                minimized="false"
                ratio="0.05"
                relationship="bottom"
                relative="org.eclipse.ui.views.ContentOutline"
                visible="true"/>
         <view
               id="uk.ac.gda.client.liveplotview"
               minimized="false"
               ratio="0.4"
               relationship="stack"
               relative="gda.rcp.ncd.views.NCDStatus"
               visible="true">
         </view>
