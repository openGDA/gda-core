               relative="org.eclipse.ui.views.ProblemView">
         </view> -->
      </perspectiveExtension>
   </extension>
      <extension
            point="org.eclipse.dawnsci.plotting.api.toolPageAction">
         <tool_page_action
               action_type="TOOLBAR"
               command_id="uk.ac.gda.client.ncd.gridrefreshimage"
               id="uk.ac.gda.client.ncd.gridtool.gridrefreshimage"
               label="Refresh Image"
               tool_id="org.dawb.workbench.plotting.tools.gridTool">
         </tool_page_action>
         <tool_page_action
               command_id="uk.ac.gda.client.ncd.gridstartscanall"
               id="uk.ac.gda.client.ncd.gridtool.gridstartscanall"
               label="Scan All"
               tool_id="org.dawb.workbench.plotting.tools.gridTool">
         </tool_page_action>
      </extension>
      <extension
            point="org.eclipse.ui.commands">
