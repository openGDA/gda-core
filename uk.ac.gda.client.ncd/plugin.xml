               defaultHandler="gda.rcp.ncd.sideplot.GridImageRefresh"
               id="uk.ac.gda.client.ncd.gridrefreshimage"
               name="Refresh Image">
         </command>
         <command
               defaultHandler="gda.rcp.ncd.sideplot.GridStartScan"
               id="uk.ac.gda.client.ncd.gridstartscan"
               name="Start Scan">
         </command>
         <command
               defaultHandler="gda.rcp.ncd.sideplot.GridStartScanAll"
               id="uk.ac.gda.client.ncd.gridstartscanall"
               name="Scan All">
		</command>
      </extension>
