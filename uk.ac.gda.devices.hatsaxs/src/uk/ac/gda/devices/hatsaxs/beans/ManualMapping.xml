<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="uk.ac.gda.devices.hatsaxs.beans.ManualSessionBean">
		<map-to xml="ManualSessionBean" />
		<field name="measurements" type="uk.ac.gda.devices.hatsaxs.beans.ManualBean"
			collection="collection" set-method="setMeasurements" get-method="getMeasurements">
			<bind-xml name="measurement" node="element" />
		</field>
	</class>

	<class name="uk.ac.gda.devices.hatsaxs.beans.ManualBean">
		<map-to xml="ManualBean" />
		<field name="sampleName" type="string">
			<bind-xml name="sampleName" node="element" />
		</field>
		<field name="temperature" type="double">
			<bind-xml name="temperature" node="element" />
		</field>
		<field name="delay" type="double" >
			<bind-xml name="delay" node="element" />
		</field>
		<field name="channels" type="int" >
			<bind-xml name="channels" node="element" />
		</field>
		<field name="illumination" type="double" >
			<bind-xml name="illumination" node="element" />
		</field>
		<field name="lightExpose" type="boolean" >
			<bind-xml name="lightExpose" node="element" />
		</field>
		<field name="frames" type="int" >
			<bind-xml name="frames" node="element" />
		</field>
		<field name="timePerFrame" type="double">
			<bind-xml name="timePerFrame" node="element" />
		</field>
		<field name="visit" type="string">
			<bind-xml name="visit" />
		</field>
	</class>
</mapping>