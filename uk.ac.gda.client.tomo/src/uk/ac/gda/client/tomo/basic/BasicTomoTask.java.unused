package uk.ac.gda.client.tomo.basic;

import java.io.FileOutputStream;
import java.io.PrintStream;
import java.util.concurrent.Callable;

import org.edna.tomov1.launchers.TomoLaunchers;
import org.edna.tomov1.xsdata.XSDataInputTomography;

import uk.ac.gda.client.tomo.ReconStatus;

public class BasicTomoTask implements Callable<ReconStatus> {

	private XSDataInputTomography xsDataInputTomography;
	private PrintStream out;
	
	public void setXSDataInputTomography(XSDataInputTomography inputData) {
		xsDataInputTomography = inputData;
	}

	@Override
	public ReconStatus call() throws Exception {
		
		out = new PrintStream(new FileOutputStream("/dls/i12/logs/edna.log",true));
		
		TomoLaunchers.LaunchEDPluginTomography(xsDataInputTomography, out);
		ReconStatus reconStatus = new ReconStatus();
		reconStatus.setMessage("Edna task has completed");
		return reconStatus;
		
	}

}
