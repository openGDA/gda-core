<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="uk.ac.gda.epics.adviewer.commands.setExposure"
            name="SetExposure">
         <commandParameter
               id="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
               name="name"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="uk.ac.gda.epics.adviewer.commands.setLiveViewScale"
            name="SetLiveViewScale">
         <commandParameter
               id="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
               name="name"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="uk.ac.gda.epics.adviewer.command.zoomToFit"
            name="ZoomToFit">
         <commandParameter
               id="uk.ac.gda.epics.adviewer.commandParameters.adcontrollerServiceName"
               name="name"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="uk.ac.gda.epics.adviewer.commands.setLiveViewScale"
            icon="icons/setLiveViewScale.gif">
      </image>
      <image
            commandId="uk.ac.gda.epics.adviewer.commands.setExposure"
            icon="icons/setExposure.gif">
      </image>
      <image
            commandId="uk.ac.gda.epics.adviewer.command.zoomToFit"
            icon="icons/arrow_out.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="uk.ac.gda.epics.adviewer.handlers.SetExposure"
            commandId="uk.ac.gda.epics.adviewer.commands.setExposure">
      </handler>
      <handler
            class="uk.ac.gda.epics.adviewer.handlers.SetLiveViewScale"
            commandId="uk.ac.gda.epics.adviewer.commands.setLiveViewScale">
      </handler>
      <handler
            class="uk.ac.gda.epics.adviewer.handlers.ZoomToFit"
            commandId="uk.ac.gda.epics.adviewer.command.zoomToFit">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="uk.ac.gda.epics.adviewer.view.category"
            class="uk.ac.diamond.scisoft.analysis.rcp.views.PlotView"
            icon="icons/picture.png"
            id="uk.ac.gda.epics.adviewer.snapshotView"
            name="Snapshot"
            restorable="true">
      </view>
      <category
            id="uk.ac.gda.epics.adviewer.view.category"
            name="EPICS AreaDetector">
      </category>
      <view
            allowMultiple="true"
            category="uk.ac.gda.epics.adviewer.view.category"
            class="uk.ac.gda.epics.adviewer.views.HistogramView"
            icon="icons/AreaDetectorProfileView.gif"
            id="uk.ac.gda.epics.adviewer.histogramview"
            name="Histogram"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="uk.ac.gda.epics.adviewer.view.category"
            class="uk.ac.gda.epics.adviewer.views.MJPegView"
            icon="icons/AreaDetectorLiveView.gif"
            id="uk.ac.gda.epics.adviewer.mjpegview"
            name="MJPegView"
            restorable="true">
      </view>
   </extension>
   <extension
         id="uk.ac.gda.epics.adviewer.disableviews"
         name="Hidden Views"
         point="org.eclipse.ui.activities">
      <activityPatternBinding
            activityId="uk.ac.gda.epics.adviewer.disableviews"
            pattern="uk.ac.gda.epics.adviewer.*">
      </activityPatternBinding>
      <activity
            id="uk.ac.gda.epics.adviewer.disableviews"
            name="Hide View">
      </activity>
   </extension>

</plugin>
