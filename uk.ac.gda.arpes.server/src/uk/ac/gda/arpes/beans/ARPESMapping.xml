<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="uk.ac.gda.arpes.beans.ARPESScanBean">
		<map-to xml="ARPESScanBean"/>
		<field name="lensMode" type="string">
			<bind-xml name="lensMode" node="element"/>
		</field>
		<field name="acquisitionMode" type="string" handler="uk.ac.gda.arpes.beans.AcquisitionModeFieldHandler">
			<bind-xml name="acquisitionMode" node="element" />
		</field>
		<field name="passEnergy" type="int">
			<bind-xml name="passEnergy" node="element"/>
		</field>
		<field name="startEnergy" type="double">
			<bind-xml name="startEnergy" node="element"/>
		</field>
		<field name="endEnergy" type="double">
			<bind-xml name="endEnergy" node="element"/>
		</field>
		<field name="stepEnergy" type="double">
			<bind-xml name="stepEnergy" node="element"/>
		</field>
		<field name="timePerStep" type="double">
			<bind-xml name="timePerStep" node="element"/>
		</field>		
		<field name="iterations" type="int">
			<bind-xml name="iterations" node="element"/>
		</field>
		<field name="configureOnly" type="boolean">
			<bind-xml name="configureOnly" node="element"/>
		</field>
	</class>
</mapping>