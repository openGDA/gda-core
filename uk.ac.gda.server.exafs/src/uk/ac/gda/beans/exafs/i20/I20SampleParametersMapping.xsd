<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

	<xsd:element name="I20SampleParameters">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="shouldValidate" type="xsd:boolean"
					maxOccurs="1" minOccurs="0" />
				<xsd:element name="name" type="xsd:string" maxOccurs="1"
					minOccurs="1" />
				<xsd:element name="description" type="xsd:string"
					maxOccurs="unbounded" minOccurs="0" />
				<xsd:element name="sampleWheelPosition" type="xsd:string"
					maxOccurs="1" minOccurs="0" />
				<xsd:element name="useSampleWheel" type="xsd:boolean"
					maxOccurs="1" minOccurs="0" />

				<xsd:element name="sampleEnvironment" maxOccurs="1"
					minOccurs="1">
					<xsd:simpleType>
						<xsd:restriction base="xsd:string">
							<xsd:enumeration value="None" />
							<xsd:enumeration value="Room Temperature" />
							<xsd:enumeration value="Cryostat" />
							<!-- <xsd:enumeration value="Furnace" /> -->
							<!-- <xsd:enumeration value="Microreactor" /> -->
							<!-- <xsd:enumeration value="Custom (XYZ)" /> -->
							<!-- <xsd:enumeration value="Custom" /> -->
						</xsd:restriction>
					</xsd:simpleType>
				</xsd:element>

				<xsd:element name="sampleposition" maxOccurs="unbounded" minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="sample_x" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="sample_y" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="sample_z" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="sample_rotation" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="sample_finerotation" type="xsd:string"
								maxOccurs="1" minOccurs="0" />
							<xsd:element name="sample_roll" type="xsd:string"
								maxOccurs="1" minOccurs="0" />
							<xsd:element name="sample_pitch" type="xsd:string"
								maxOccurs="1" minOccurs="0" />
							<xsd:element name="sample_name" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="sample_description" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="numberOfRepetitions" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="samXEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="samYEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="samZEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="rotEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="rollEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="pitchEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="fineRotEnabled" type="xsd:boolean" 
								maxOccurs="1" minOccurs="1" />	
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

				<xsd:element name="cryostat" maxOccurs="1" minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="loopChoice" maxOccurs="1"
								minOccurs="1">
								<xsd:simpleType>
									<xsd:restriction base="xsd:string">
										<xsd:enumeration value="Loop over sample, then temperature" />
										<xsd:enumeration value="Loop over temperature, then sample" />
									</xsd:restriction>
								</xsd:simpleType>
							</xsd:element>
							<xsd:element name="tolerance" type="xsd:double"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="waitTime" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="temperature" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="controlMode" maxOccurs="1"
								minOccurs="1">
								<xsd:simpleType>
									<xsd:restriction base="xsd:string">
										<xsd:enumeration value="None" />
										<xsd:enumeration value="Manual PID" />
										<xsd:enumeration value="Zone control" />
										<xsd:enumeration value="Open Loop" />
										<xsd:enumeration value="Auto-tune PID" />
									</xsd:restriction>
								</xsd:simpleType>
							</xsd:element>
							<xsd:element name="heaterRange" maxOccurs="1"
								minOccurs="1">
								<xsd:simpleType>
									<xsd:restriction base="xsd:string">
										<xsd:enumeration value="4mW" />
										<xsd:enumeration value="40mW" />
										<xsd:enumeration value="400mW" />
										<xsd:enumeration value="4W" />
										<xsd:enumeration value="40W" />
									</xsd:restriction>
								</xsd:simpleType>
							</xsd:element>
							<xsd:element name="p" type="xsd:double" maxOccurs="1"
								minOccurs="0" />
							<xsd:element name="i" type="xsd:double" maxOccurs="1"
								minOccurs="0" />
							<xsd:element name="d" type="xsd:double" maxOccurs="1"
								minOccurs="0" />
							<xsd:element name="manualOutput" type="xsd:double"
								maxOccurs="1" minOccurs="0" />
							<xsd:element name="sample" maxOccurs="unbounded" minOccurs="1">
								<xsd:complexType>
									<xsd:sequence>
										<xsd:element name="position" type="xsd:double" maxOccurs="1" minOccurs="1"/>
										<xsd:element name="finePosition" type="xsd:double" maxOccurs="1" minOccurs="1"/>
										<xsd:element name="sample_name" type="xsd:string" maxOccurs="1" minOccurs="1"/>
										<xsd:element name="sampleDescription" type="xsd:string" maxOccurs="1" minOccurs="1"/>
										<xsd:element name="numberOfRepetitions" type="xsd:integer" maxOccurs="1" minOccurs="1" />
									</xsd:sequence>
								</xsd:complexType>
							</xsd:element>
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

				<xsd:element name="furnace" maxOccurs="1" minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="temperature" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="tolerance" type="xsd:double"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="time" type="xsd:double" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="x" type="xsd:string" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="y" type="xsd:string" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="z" type="xsd:string" maxOccurs="1"
								minOccurs="1" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

				<xsd:element name="microreactor" maxOccurs="1"
					minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="gas0Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas1Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas2Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas3Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas4Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas5Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas6Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="gas7Rate" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="temperature" type="xsd:integer"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="masses" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

				<xsd:element name="custom_xyz" maxOccurs="unbounded"
					minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="deviceName" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="x" type="xsd:double" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="y" type="xsd:double" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="z" type="xsd:double" maxOccurs="1"
								minOccurs="1" />
							<xsd:element name="value" type="xsd:double"
								maxOccurs="1" minOccurs="1" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

				<xsd:element name="custom" maxOccurs="unbounded"
					minOccurs="0">
					<xsd:complexType>
						<xsd:sequence>
							<xsd:element name="deviceName" type="xsd:string"
								maxOccurs="1" minOccurs="1" />
							<xsd:element name="value" type="xsd:double"
								maxOccurs="1" minOccurs="1" />
						</xsd:sequence>
					</xsd:complexType>
				</xsd:element>

			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>

	<xsd:complexType name="signalType">
		<xsd:sequence>
			<xsd:element name="label" type="xsd:string" maxOccurs="1"
				minOccurs="1" />
			<xsd:element name="name" type="xsd:string" maxOccurs="1"
				minOccurs="0" />
			<xsd:element name="dataFormat" type="xsd:string"
				maxOccurs="1" minOccurs="1" />
			<xsd:element name="expression" type="xsd:string"
				maxOccurs="1" minOccurs="0" />
			<xsd:element name="scannableName" type="xsd:string"
				maxOccurs="1" minOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="metadataType">
		<xsd:sequence>
			<xsd:element name="scannableName" type="xsd:string" maxOccurs="1"
				minOccurs="0" />
		</xsd:sequence>
	</xsd:complexType>

	
</xsd:schema>
