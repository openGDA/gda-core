-->
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="uk.ac.gda.client.categories.diagnostics.logpanel.commands"
            name="Logpanel">
      </category>
      <command
            categoryId="uk.ac.gda.client.categories.diagnostics.logpanel.commands"
            defaultHandler="uk.ac.gda.client.logpanel.commands.ClearHandler"
            id="uk.ac.gda.client.logpanel.commands.clear"
            name="Clear Log">
      </command>
      <command
            categoryId="uk.ac.gda.client.categories.diagnostics.logpanel.commands"
            defaultHandler="uk.ac.gda.client.logpanel.commands.ScrollLockHandler"
            id="uk.ac.gda.client.logpanel.commands.scrollLock"
            name="Scroll Lock">
         <state
               class="org.eclipse.jface.commands.ToggleState"
               id="uk.ac.gda.client.logpanel.commands.scrollLock.toggleState">
         </state>
      </command>
      <command
            categoryId="uk.ac.gda.client.categories.diagnostics.logpanel.commands"
            defaultHandler="uk.ac.gda.client.logpanel.commands.CopyToClipboardHandler"
            description="Copy selected messages to system clipboard"
            id="uk.ac.gda.client.logpanel.commands.copy"
            name="Copy">
      </command>
   </extension>

</plugin>
