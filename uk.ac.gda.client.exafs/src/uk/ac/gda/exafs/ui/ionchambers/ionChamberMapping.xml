<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="uk.ac.gda.exafs.ui.ionchambers.IonChambersBean">
		<map-to xml="IonChambersBean" />
		<field name="log" type="string">
			<bind-xml name="log" node="element" />
		</field>
		<field name="energy" type="double">
			<bind-xml name="energy" node="element" />
		</field>
		<field name="ionChambers" type="uk.ac.gda.exafs.ui.ionchambers.IonChamberBean"
			collection="collection" set-method="addIonChamber" get-method="getIonChambers">
			<bind-xml name="ionChambers" node="element" />
		</field>
	</class>

	<class name="uk.ac.gda.exafs.ui.ionchambers.IonChamberBean">
		<map-to xml="ionChambers" />
		<field name="ionChamberScannable" type="string">
			<bind-xml name="ionChamberScannable" node="element" />
		</field>
		<field name="ionChamberName" type="string">
			<bind-xml name="ionChamberName" node="element" />
		</field>
		<field name="amplifierScannable" type="string">
			<bind-xml name="amplifierScannable" node="element" />
		</field>
		<field name="sensitivity" type="string">
			<bind-xml name="sensitivity" node="element" />
		</field>
		<field name="voltageScannable" type="string">
			<bind-xml name="voltageScannable" node="element" />
		</field>
		<field name="gasTypesAvailable" type="string">
			<bind-xml name="gasTypesAvailable" node="element" />
		</field>
		<field name="gasTypeSelected" type="string">
			<bind-xml name="gasTypeSelected" node="element" />
		</field>
		<field name="flush" type="boolean">
			<bind-xml name="flush" node="element" />
		</field>
		<field name="totalPressure" type="double">
			<bind-xml name="totalPressure" node="element" />
		</field>
		<field name="chamberLength" type="double">
			<bind-xml name="chamberLength" node="element" />
		</field>
		<field name="fill1Period" type="double">
			<bind-xml name="fill1Period" node="element" />
		</field>
		<field name="fill2Period" type="double">
			<bind-xml name="fill2Period" node="element" />
		</field>
		<field name="absorption" type="double">
			<bind-xml name="absorption" node="element" />
		</field>
	</class>
</mapping>